% display
%
% Like the ‘displaymath’ environment but for vertical material.
% The optional star argument omits the indentation.  This is a
% nice alternative for a ‘here’ float.
%
% \begin{display}*
% \includegraphics[height=25mm]{CTAN_lion_drawing_by_Duane_Bibby.pdf}
% \captionof{figure}{CTAN Lion Drawing by Duane Bibby}
% \end{display}
\NewDocumentEnvironment{display}{s >{\SplitList{,}}o}{%
  \rs@displayspec{#2}%
  \ifvmode\else\par\fi
  \list{}{%
    \topsep\rs@displayskip
    \partopsep\z@
    \itemsep\z@
    \parsep\parskip
    \leftmargin\IfBooleanTF{#1}\z@\leftmargini
    \rightmargin\z@
    \listparindent\parindent
    \itemindent\z@
    \labelwidth\z@
    \labelsep\z@
    \@beginparpenalty\predisplaypenalty
    \@endparpenalty\postdisplaypenalty
  }\item\relax}{%
  \endlist
  \vskip-\parskip
  \relax}

% The display options.
\def\rs@displayskip{}
% Step 1: initialization.
\def\rs@displayspeci{%
  \let\rs@displayskip\bigskipamount}
% Step 2: pre-processing.
\def\rs@displayspecii#1{%
  \def\@tempa{#1}%
  \def\@tempb{big}%
  \ifx\@tempa\@tempb
    \let\rs@displayskip\bigskipamount
  \else
    \def\@tempb{medium}%
    \ifx\@tempa\@tempb
      \let\rs@displayskip\medskipamount
    \else
      \def\@tempb{small}%
      \ifx\@tempa\@tempb
        \let\rs@displayskip\smallskipamount
      \else
        \def\@tempb{none}%
        \ifx\@tempa\@tempb
          \let\rs@displayskip\z@
        \else
          \relax
        \fi
      \fi
    \fi
  \fi}
% Step 3: post-processing.
\def\rs@displayspeciii{}
% All steps.
\def\rs@displayspec#1{%
  \rs@displayspeci
  \ProcessList{#1}\rs@displayspecii
  \rs@displayspeciii}

